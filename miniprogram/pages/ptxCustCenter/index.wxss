.btnBox{
  background: #fff;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #eee;
}
.btnBox .btn{
  width: 33.32%;
  display: inline-block;
}
.btn.active{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  position: relative;
}
.btn.active::after{
  position: absolute;
  content: '';
  background: #5576dc;
  width: 100rpx;
  height: 5rpx;
  left: 50%;
  bottom: 10rpx;
  transform: translate(-50%,-50%);
}
.btn.n_1,.btn.n_2{
  position: relative;
}
.btn.n_1::before{
  position: absolute;
  content: '';
  height: 40rpx;
  width: 5rpx;
  background: #eee;
  right: 0;
  top:50%;
  transform: translate(-50%,-50%)
}
.btn.n_1::before,.btn.n_2::before{
  position: absolute;
  content: '';
  height: 40rpx;
  width: 5rpx;
  background: #eee;
  right: 0;
  top:50%;
  transform: translate(-50%,-50%)
}
